<!-- 新加入购物车 -->
    <van-goods-action>
  <van-goods-action-icon
    icon="goods-collect-o"
    text="首页"
    bind:click="popBaitiaoView"
  />
  <van-goods-action-icon
    icon="cart-o"
    text="购物车"
    bind:click="add"
  />
  <van-goods-action-button
    text="加入购物车"
    type="warning"
    bind:click="addCart"
  />
  <van-goods-action-button
    text="立即购买"
    bind:click="onClickButton"
  />
</van-goods-action>

