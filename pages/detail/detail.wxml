    <!-- buy组件 -->
    <van-transition 
    name="fade" 
    show="{{ !hideBuy }}" 
     duration="{{ { enter: 300, leave: 1000 } }}"
    custom-class="block">
  <buy bind:buy="addCart" 
    bind:onClickButton="onClickButton"
    bind:getcount="getcount"
    bind:classF='classF'
    bind:hideBaitiaoView='hideBaitiaoView'
    hideBuy="{{hideBuy}}" 
    partData="{{partData}}"
    cartArr='{{pageArr}}'
    arrid="{{arrid}}"
    ></buy>

</van-transition>
    
