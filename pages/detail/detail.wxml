<view class="detail">
    <!-- 图片轮播 -->
    <view class="mod_slider">
        <swiper 
        indicator-dots='true'
        indicator-color='rgba(255.255.255.0.6)'
        indicator-active='#e93b3d'
        style='width:100%;height:520rpx;'
        >
        <block wx:for="{{partData.loopImgUrl}}" wx:key="{{index}}">
            <swiper-item class="">
                <image mode="aspectFit" class="swiper-item" src="{{item}}" />
            </swiper-item>
        </block>
        
        </swiper>
    </view>
    <!-- 商品信息 -->
    <view class="buy_area">
        <view class="textWrap">
            <text>{{partData.title}}</text>
        </view>
        <view class="priceWrap">
            <text>￥{{partData.price}}</text>
        </view>

         <!-- infocell组件 支付  使用组件-->
    <!-- popView与组件里注册相对应 -->
        <infocell 
        bind:popView='popBaitiaoView'
        title="客服" 
        desc='{{baitiaoSelectItem.desc}}'>
        </infocell>

    <!-- 已选  title对应infocell.js里的title 不填就为title默认值-->
        <infocell 
        bind:popView='popBuyView'
        title="已选"
        desc='{{partData.count}}件'>
        </infocell>

    </view>

    <!-- 加入购物车 -->
    <view class="btn_bar" >
        <view class="icon_cart" bindtap="add">
        <!-- 数量图标    不能加回车-->
            <text class="badge" wx:if="{{badgeCount > 0}}">{{badgeCount}}</text>

            <image src="/image/cart.png" />
            <text>购物车</text>
        </view>
        <view class="cart_btn">
            <button bindtap="addCart">加入购物车</button>
        </view>
    </view>

    <!-- iou组件 遍历白条信息 -->
    <!-- <iou 
     bind:liou='liouView'
    baitiao="{{baitiao}}" 
    hideBaitiao="{{hidebaitiao}}">
    
    </iou> -->

    
    <!-- buy组件 -->
    <buy bind:buy="addCart" bind:getcount="getcount"
    hideBuy="{{hideBuy}}" 
    partData="{{partData}}"></buy>
    <!-- 图片 -->
        <!-- <view id='col'> -->
      <view class="weui-loadmore weui-loadmore_line" >
        <view class="weui-loadmore__tips weui-loadmore__tips_in-line" id="col">商品详情</view>
      </view>
      <!-- <view class='particulars'>
        {{detail[0].productParticulars}}
      </view> -->
      <!-- 利用widthFix让原图更加清晰 -->
      <!-- <block wx:for="{{imgDetail}}">
        <view>{{item}}</view>
      </block> -->
      <image id="imgs" wx:for="{{imgDetail}}" wx:key="index" src="{{item}}" data-index='{{index}}' bindtap='previewImage' class='fade_in' mode='widthFix'></image>
    <!-- </view> -->
    <!--  -->
</view>
