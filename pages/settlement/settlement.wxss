/* pages/settlement/settlement.wxss */
.p{
    margin-bottom: 20px;
    /* border: 2px solid; */
}

.fixBar{
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    background: #fff;
    border-top: 2rpx solid #e8e8ed;
    color: #333;
    font-size: 28rpx;
    z-index: 99;
    display: flex;
    justify-content: space-between;
    /* flex-direction: row; */
    height: 100rpx;
  }
  .select_all{
    width: 20%;
    line-height: 100rpx;
    font-size: 24rpx;
    color: #999;
    box-sizing: border-box;
    padding-left: 20rpx;
  }
  .select_all .icon{
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
  }
  .total{
    width: 40%;
    box-sizing: border-box;
    line-height: 100rpx;
    font-size: 32rpx;
  }
  .total .money{
    color: #e4393c;
    font-weight: 700;
  }
  .btn_amount{
    width: 40%
  }
  .btn_amount button{
    background: #e4393c;
    color: #fff;
    height: 100rpx;
    border: none;
    border-radius: 0;
    line-height: 100rpx;
  }
  
  .del{
    background-color: #e4393c;
    width: 90px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    transform: translateX(90px);
    transition: all 0.4s;
  }
  .touch-move-active .content,
  .touch-move-active .del {
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }