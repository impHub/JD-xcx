/* pages/home/home.wxss */
@import "../../style/weui.wxss";
.search{
    display: flex;
    flex-direction: row;
    height: 60rpx;
    align-items: center;
}


.search .scan{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 75rpx;
}

.search .search-input{
    padding: 5rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: row;
    height: 100%;
    width: 80%;
    border-radius: 10rpx;
    align-items: center;
}


.search-input input{
    padding: 10rpx 30rpx;
    background-color: #fff;
}


.search-icon{
    width: 30rpx;
    height: 30rpx;
}


.search-text{
    top:0px;
    padding: 0px;
    left: 0;
    right: 0;
}
.widgets-img{
    width: 40rpx;
    height: 40rpx;
}

.content-scroll{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
}
.indicator-wrap{
    width: 100%;
    height: auto;
    margin-bottom: 10px;
}
/* img图片宽高 */
.swiper-item{
    display: block;
    width: 100%;
    /* height: 325rpx; */
    height: 425rpx;
}

